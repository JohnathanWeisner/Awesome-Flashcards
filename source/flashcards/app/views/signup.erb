<div class="container">
  <h1>Flash Card Ninja!</h1>
  <p>MoshiMoshi Ninjai!</p>

  <table>
    <tr>
      <th>File Description</th>
      <th>File Location</th>
    </tr>
    <tr>
      <td>This view file</td>
      <td><code><%= __FILE__.gsub(Sinatra::Application.root, '') %></code></td>
    </tr>
    <tr>
      <td>The layout file</td>
      <td><code><%= File.expand_path('../layout.erb', __FILE__).gsub(Sinatra::Application.root, '') %></code></td>
    </tr>
    <tr>
      <td>The current controller</td>
      <td><code><%= File.expand_path('../../controllers/index.rb', __FILE__).gsub(Sinatra::Application.root, '') %></code></td>
    </tr>
  </table>
  <% if @user %>
    <% @user.errors.full_messages.each do |message| %>
     <p><%= message %></p>
     <%end%>
  <% end %>

</div>
<div class="container">
  <h3> If you are true Ninjai, create account here </h3>
<form name="signup_form" action="/signup" method="post">
Username: <input type="text" name="user[username]"><br>
Email: <input type="email" name="user[email]">
Password: <input type="password" name="user[password]">
<input type="submit">
</form>

</div>
