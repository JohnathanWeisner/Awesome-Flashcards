    <div class="container">

      <div class="row">
        <div class="col-md-4">
          <h2>Start a new game:</h2>
          <form name="input" action="/rounds/quiz" method="post">
            <select name="deck_id">
              <% @deck.each do |deck| %>
                <%= "<option value=\"#{deck.id}\">#{deck.name}</option>" %>
              <% end %>
            </select>

            <input type="submit" value="Submit" class="btn btn-default side-buffer-6">
          </form>
        </div>

        <div class="col-md-4">
          <h2>Email</h2>
          <p><%= @email %></p>
        </div>

        <div class="col-md-4">
          <p class="btn btn-default"><a href='/rounds/view'>View All Rounds</a></p><br><br>
        </div>
      </div>

